using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace SampleConstructers
{
    class Person
    {
        private string name;
        private int age;

        public string getName()
        {
            return name;
        }
        public void setName(string pName)
        {
            name = pName;
        }
        public int getAge()
        {
            return age;
        }
        public void setAge(int pAge)
        {
            age = pAge;
        }
        //default constructor
        public Person()
        {
           name = null;
            age = 0;
        }
        //parameterized constructor
        public Person(string pName, int pAge)
        {
            name = pName;
            age = pAge;
        }
    }
    class Student:Person
    {
        private float gpa;

        public Student()
        {
            gpa = 0.0f;
        }
        public Student(float pGpa)
        {
            gpa = pGpa;
        }
    }
}
